{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "production": {
      "error": "This resource does not support generation in the manifest."
    },
    "keycloak": {
      "type": "container.v1",
      "image": "quay.io/keycloak/keycloak:26.2",
      "args": [
        "start",
        "--import-realm"
      ],
      "bindMounts": [
        {
          "source": "realms",
          "target": "/opt/keycloak/data/import",
          "readOnly": true
        }
      ],
      "volumes": [
        {
          "name": "keycloak-data",
          "target": "/opt/keycloak/data",
          "readOnly": false
        }
      ],
      "env": {
        "KC_BOOTSTRAP_ADMIN_USERNAME": "admin",
        "KC_BOOTSTRAP_ADMIN_PASSWORD": "{keycloak-password.value}",
        "KC_HEALTH_ENABLED": "true",
        "KC_HTTP_ENABLED": "true",
        "KC_HOSTNAME_STRICT": "false",
        "VIRTUAL_HOST": "id.overflow.local",
        "VIRTUAL_PORT": "8080",
        "KC_PROXY_HEADERS": "xforwarded"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 6001,
          "targetPort": 8080
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 9000
        }
      }
    },
    "postgres": {
      "type": "container.v1",
      "connectionString": "Host={postgres.bindings.tcp.host};Port={postgres.bindings.tcp.port};Username=postgres;Password={postgres-password.value}",
      "image": "docker.io/library/postgres:17.5",
      "volumes": [
        {
          "name": "postgres-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{postgres-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "typesense": {
      "type": "container.v1",
      "image": "typesense/typesense:29.0",
      "args": [
        "--data-dir",
        "/data",
        "--api-key",
        "${TYPESENSE_API_KEY}",
        "--enable-cors"
      ],
      "volumes": [
        {
          "name": "typesense-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "env": {
        "TYPESENSE_API_KEY": "${TYPESENSE_API_KEY}"
      },
      "bindings": {
        "typesense": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8108
        }
      }
    },
    "questionDb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=questionDb"
    },
    "profileDb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=profileDb"
    },
    "statDb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=statDb"
    },
    "voteDb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=voteDb"
    },
    "messaging": {
      "type": "container.v1",
      "connectionString": "amqp://guest:{messaging-password.value}@{messaging.bindings.tcp.host}:{messaging.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:4.1-management",
      "volumes": [
        {
          "name": "rabbitmq-data",
          "target": "/var/lib/rabbitmq",
          "readOnly": false
        }
      ],
      "env": {
        "RABBITMQ_DEFAULT_USER": "guest",
        "RABBITMQ_DEFAULT_PASS": "{messaging-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5672
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 15672
        }
      }
    },
    "question-svc": {
      "type": "project.v1",
      "path": "../QuestionService/QuestionService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{question-svc.bindings.http.targetPort}",
        "services__keycloak__http__0": "{keycloak.bindings.http.url}",
        "services__keycloak__management__0": "{keycloak.bindings.management.url}",
        "ConnectionStrings__questionDb": "{questionDb.connectionString}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "question-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "search-svc": {
      "type": "project.v1",
      "path": "../SearchService/SearchService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{search-svc.bindings.http.targetPort}",
        "typesense-api-key": "${TYPESENSE_API_KEY}",
        "services__typesense__typesense__0": "{typesense.bindings.typesense.url}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "search-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "profile-svc": {
      "type": "project.v1",
      "path": "../ProfileService/ProfileService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{profile-svc.bindings.http.targetPort}",
        "services__keycloak__http__0": "{keycloak.bindings.http.url}",
        "services__keycloak__management__0": "{keycloak.bindings.management.url}",
        "ConnectionStrings__profileDb": "{profileDb.connectionString}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "profile-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "stat-svc": {
      "type": "project.v1",
      "path": "../StatsService/StatsService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{stat-svc.bindings.http.targetPort}",
        "ConnectionStrings__statDb": "{statDb.connectionString}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "stat-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "vote-svc": {
      "type": "project.v1",
      "path": "../VoteService/VoteService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{vote-svc.bindings.http.targetPort}",
        "ConnectionStrings__voteDb": "{voteDb.connectionString}",
        "services__keycloak__http__0": "{keycloak.bindings.http.url}",
        "services__keycloak__management__0": "{keycloak.bindings.management.url}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "vote-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "gateway": {
      "type": "container.v1",
      "image": "mcr.microsoft.com/dotnet/nightly/yarp:2.3.0-preview.4",
      "entrypoint": "dotnet",
      "args": [
        "/app/yarp.dll"
      ],
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "services__question-svc__http__0": "{question-svc.bindings.http.url}",
        "REVERSEPROXY__ROUTES__route0__MATCH__PATH": "/questions/{**catch-all}",
        "REVERSEPROXY__ROUTES__route0__CLUSTERID": "cluster_question-svc",
        "REVERSEPROXY__ROUTES__route1__MATCH__PATH": "/test/{**catch-all}",
        "REVERSEPROXY__ROUTES__route1__CLUSTERID": "cluster_question-svc",
        "REVERSEPROXY__ROUTES__route2__MATCH__PATH": "/tags/{**catch-all}",
        "REVERSEPROXY__ROUTES__route2__CLUSTERID": "cluster_question-svc",
        "REVERSEPROXY__ROUTES__route3__MATCH__PATH": "/search/{**catch-all}",
        "REVERSEPROXY__ROUTES__route3__CLUSTERID": "cluster_search-svc",
        "REVERSEPROXY__ROUTES__route4__MATCH__PATH": "/profiles/{**catch-all}",
        "REVERSEPROXY__ROUTES__route4__CLUSTERID": "cluster_profile-svc",
        "REVERSEPROXY__ROUTES__route5__MATCH__PATH": "/stats/{**catch-all}",
        "REVERSEPROXY__ROUTES__route5__CLUSTERID": "cluster_stat-svc",
        "REVERSEPROXY__ROUTES__route6__MATCH__PATH": "/votes/{**catch-all}",
        "REVERSEPROXY__ROUTES__route6__CLUSTERID": "cluster_vote-svc",
        "REVERSEPROXY__CLUSTERS__cluster_question-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://question-svc",
        "REVERSEPROXY__CLUSTERS__cluster_search-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://search-svc",
        "REVERSEPROXY__CLUSTERS__cluster_profile-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://profile-svc",
        "REVERSEPROXY__CLUSTERS__cluster_stat-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://stat-svc",
        "REVERSEPROXY__CLUSTERS__cluster_vote-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://vote-svc",
        "services__question-svc__https__0": "{question-svc.bindings.https.url}",
        "services__search-svc__http__0": "{search-svc.bindings.http.url}",
        "services__search-svc__https__0": "{search-svc.bindings.https.url}",
        "services__profile-svc__http__0": "{profile-svc.bindings.http.url}",
        "services__profile-svc__https__0": "{profile-svc.bindings.https.url}",
        "services__stat-svc__http__0": "{stat-svc.bindings.http.url}",
        "services__stat-svc__https__0": "{stat-svc.bindings.https.url}",
        "services__vote-svc__http__0": "{vote-svc.bindings.http.url}",
        "services__vote-svc__https__0": "{vote-svc.bindings.https.url}",
        "ASPNETCORE_URLS": "http://*:8001",
        "VIRTUAL_HOST": "api.overflow.local",
        "VIRTUAL_PORT": "8001",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "gateway"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 5000
        },
        "gateway": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8001,
          "external": true
        }
      }
    },
    "webapp": {
      "type": "container.v1",
      "build": {
        "context": "../webapp",
        "dockerfile": "../webapp/Dockerfile"
      },
      "env": {
        "NODE_ENV": "production",
        "services__keycloak__http__0": "{keycloak.bindings.http.url}",
        "services__keycloak__management__0": "{keycloak.bindings.management.url}",
        "PORT": "{webapp.bindings.http.targetPort}",
        "VIRTUAL_HOST": "app.overflow.local",
        "VIRTUAL_PORT": "4000",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{production-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "webapp"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 3000,
          "targetPort": 4000
        }
      }
    },
    "nginx-proxy": {
      "type": "container.v1",
      "image": "nginxproxy/nginx-proxy:1.8",
      "bindMounts": [
        {
          "source": "../../../../../../var/run/docker.sock",
          "target": "/tmp/docker.sock",
          "readOnly": true
        },
        {
          "source": "devcerts",
          "target": "/etc/nginx/certs",
          "readOnly": true
        }
      ],
      "bindings": {
        "nginx": {
          "scheme": "nginx",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 80,
          "external": true
        },
        "nginx-ssl": {
          "scheme": "nginx-ssl",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 443,
          "external": true
        }
      }
    },
    "keycloak-password": {
      "type": "parameter.v0",
      "value": "{keycloak-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "postgres-password": {
      "type": "parameter.v0",
      "value": "{postgres-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "messaging-password": {
      "type": "parameter.v0",
      "value": "{messaging-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    },
    "production-dashboard": {
      "type": "container.v1",
      "image": "mcr.microsoft.com/dotnet/nightly/aspire-dashboard:latest",
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 8080,
          "targetPort": 18888,
          "external": true
        },
        "otlp-grpc": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 18889
        }
      }
    }
  }
}